<%= form_for @document do |f| %>

    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :language %>
        <%= f.text_field :language %>
    </p>

    <p>
        <%= f.label :content %>
        <%= f.text_area :content %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>